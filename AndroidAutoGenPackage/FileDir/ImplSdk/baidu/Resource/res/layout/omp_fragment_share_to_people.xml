<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        style="@style/omp_main_overlay_top_bar_container">
        <ImageButton
            android:id="@+id/image_button_back"
            style="@style/omp_video_overlay_back_button"
            android:src="@drawable/omp_btn_topbar_sharetopeple_close"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/back"
            android:layout_marginRight="44dip"
            android:textColor="@android:color/white"
            android:text="@string/omp_share_with_other_people"
            android:textSize="18sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dp"
            android:textSize="18sp"
            android:textColor="@color/omp_gray_text_4a4a4a"
            android:text="@string/omp_finish"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/selected_user_scrollview"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/selected_user_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            </LinearLayout>
            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/omp_ic_search_i_d_followingpage"
                android:background="@null"/>
            <EditText
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="40dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:inputType="text"
                android:lines="1"
                android:textSize="14sp"
                android:textColor="@color/omp_gray_text_4a4a4a"
                android:textColorHint="@color/omp_gray_text_cbcbcb"
                android:hint="@string/omp_search_id"
                android:background="@null"
                android:imeOptions="actionSearch"/>
            <ImageButton
                android:id="@+id/cleantext_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/omp_ic_cleantext_followingpage"
                android:scaleType="fitCenter"
                android:background="@null"
                android:visibility="invisible"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/omp_gray_line_d8d8d8"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_empty_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/omp_gray_background_9b9b9b"
            android:text="@string/omp_share_to_people_instruction"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/share_to_people_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <TextView
            android:id="@+id/text_search_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:textSize="12sp"
            android:textColor="@color/omp_red_background_ff0064"
            android:text="@string/omp_no_such_user"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
