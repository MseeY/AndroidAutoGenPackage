<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/omp_video_item_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/video_thumbnail_placeholder"
                android:layout_width="match_parent"
                android:layout_height="145dip"
                android:src="@drawable/omp_ic_loadingblankpage"
                android:background="@drawable/omp_mediaitem_loading_background"
                android:scaleType="center"/>
            <ImageView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="145dip"
                android:src="@drawable/omp_ic_loadingblankpage"
                android:background="@drawable/omp_mediaitem_loading_background"
                android:scaleType="center"/>
            <ImageView
                android:id="@+id/video_play_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@+id/video"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/omp_btn_play"/>
            <TextView
                android:id="@+id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/video"
                android:layout_marginBottom="4.7dp"
                android:layout_marginRight="10.9dp"
                android:textColor="@android:color/white"
                android:textSize="10.6sp"
                android:text="@string/omp_zero_time"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/omp_stub_title"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4.7dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_stub_user_name_or_game_name"
                    android:textColor="@color/omp_gray_text_4a4a4a"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="top"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/omp_stub_time_label"
                        android:textColor="@color/omp_gray_text_70706f"
                        android:textSize="9sp"
                        android:singleLine="true"
                        android:ellipsize="none"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dip"
                        android:layout_gravity="right"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/omp_stub_like_count"
                            android:textColor="@color/omp_gray_text_585857"
                            android:textSize="8.8sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:text="@string/omp_likes"
                            android:textColor="@color/omp_gray_text_585857"
                            android:textSize="8.8sp"
                            android:gravity="center_vertical"/>
                        <View
                            android:layout_width="1dip"
                            android:layout_height="14dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/omp_gray_line_b6b6b6"/>
                        <TextView
                            android:id="@+id/view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/omp_stub_view_count"
                            android:textColor="@color/omp_gray_text_585857"
                            android:textSize="8.8sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:text="@string/omp_views"
                            android:textColor="@color/omp_gray_text_585857"
                            android:textSize="8.8sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/omp_gray_line_d8d8d8"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/like"
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="29dp">
                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/omp_btn_like_normal"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginRight="29dp">
                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/omp_video_item_share_image_selector"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/share_view_group"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/omp_video_item_share_view_background"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/share_close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/omp_btn_closeshare_shareinpostlist"
            android:background="@null"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/share_to_people_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/omp_btn_sharetopeople_postlist"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:text="@string/omp_share_with_people"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/share_to_postlist_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/omp_btn_sharevia_postlist_copy"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:text="@string/omp_share"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
