<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dip"
        android:layout_marginBottom="11dip"
        android:layout_marginLeft="11dip"
        android:layout_marginRight="11dip"
        android:background="@drawable/omp_omplay_frame"/>

    <View
        android:layout_width="56dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:background="#2eabd4"/>
    <ScrollView
        android:id="@+id/navigation_bar"
        android:layout_width="76dip"
        android:layout_height="match_parent"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip">
        <RelativeLayout
            android:layout_width="76dip"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/button0"
                android:layout_width="56dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/omp_btn_omplaylogo_normal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_capture_it_catchphrase"
                    android:textColor="#b2ffffff"
                    android:textSize="9sp"
                    android:gravity="center"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/button1"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_below="@id/button0"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="15dip">
                <ImageView
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:background="@drawable/omp_ic_latest_maintab_normal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_popular"
                    android:gravity="center"
                    android:textColor="#b2ffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="36dip"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button1_active_overlay"
                android:layout_width="66dip"
                android:layout_height="66dip"
                android:layout_below="@id/button0"
                android:layout_marginTop="3dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/omp_navigation_button_highlight"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip">
                    <ImageView
                        android:layout_width="56dip"
                        android:layout_height="56dip"
                        android:background="@drawable/omp_ic_latest_maintab_click"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_popular"
                        android:gravity="center"
                        android:textColor="#2eabd4"
                        android:textSize="9sp"
                        android:layout_marginTop="36dip"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button3"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_below="@id/button1"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip">
                <ImageView
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:background="@drawable/omp_ic_follow_maintab_normal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_following"
                    android:gravity="center"
                    android:textColor="#b2ffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="36dip"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button3_active_overlay"
                android:layout_width="66dip"
                android:layout_height="66dip"
                android:layout_below="@id/button1"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/omp_navigation_button_highlight"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip">
                    <ImageView
                        android:layout_width="56dip"
                        android:layout_height="56dip"
                        android:background="@drawable/omp_ic_follow_maintab_click"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_following"
                        android:gravity="center"
                        android:textColor="#2eabd4"
                        android:textSize="9sp"
                        android:layout_marginTop="36dip"/>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/button4"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_below="@id/button3"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip">
                <ImageView
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:background="@drawable/omp_ic_profile_maintab_normal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_profile"
                    android:gravity="center"
                    android:textColor="#b2ffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="36dip"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button4_active_overlay"
                android:layout_width="66dip"
                android:layout_height="66dip"
                android:layout_below="@id/button3"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/omp_navigation_button_highlight"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip">
                    <ImageView
                        android:layout_width="56dip"
                        android:layout_height="56dip"
                        android:background="@drawable/omp_ic_profile_maintab_click"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_profile"
                        android:gravity="center"
                        android:textColor="#2eabd4"
                        android:textSize="9sp"
                        android:layout_marginTop="36dip"/>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/button5"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_below="@id/button4"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:visibility="gone">
                <ImageView
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:background="@drawable/omp_ic_notification_maintab_normal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_notifications"
                    android:gravity="center"
                    android:textColor="#b2ffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="36dip"/>
                <TextView
                    android:id="@+id/noti_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="8dip"
                    android:layout_marginRight="14dip"
                    android:layout_alignParentRight="true"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:paddingLeft="4dip"
                    android:paddingRight="4dip"
                    android:background="@drawable/omp_white_border_red_fill_round_background"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button5_active_overlay"
                android:layout_width="66dip"
                android:layout_height="66dip"
                android:layout_below="@id/button4"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/omp_navigation_button_highlight"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="56dip"
                    android:layout_height="56dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip">
                    <ImageView
                        android:layout_width="56dip"
                        android:layout_height="56dip"
                        android:background="@drawable/omp_ic_notification_maintab_click"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_notifications"
                        android:gravity="center"
                        android:textColor="#2eabd4"
                        android:textSize="9sp"
                        android:layout_marginTop="36dip"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <!--
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="71dip"
        android:layout_marginRight="15dip"
        android:orientation="vertical">
    -->
    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="71dip"
        android:layout_marginRight="15dip">
    </RelativeLayout>
    <!--
    </LinearLayout>
    -->
    
    <RelativeLayout
        android:id="@+id/view_group_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/view_group_tutorial_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="224dp">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/omp_tutorialbubble_triangle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:text="@string/omp_tutorial_set_profile_information"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/omp_tutorial_text_background"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/close_frame"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center">
        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:background="@drawable/omp_btn_clospeage"/>
    </RelativeLayout>

</RelativeLayout>
