<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobisocial.omlet.overlaybar.ui.fragment.VideoDetailsFragment">
    <RelativeLayout
        style="@style/omp_main_overlay_top_bar_container"
        android:id="@+id/relative_layout_top_bar">
        <ImageButton
            android:id="@+id/image_button_back"
            style="@style/omp_video_overlay_back_button" />
        <ImageButton
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:id="@+id/more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dip"
            android:background="@drawable/omp_video_details_more_image_selector"/>
        <ImageButton
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:id="@+id/share"
            android:layout_toLeftOf="@+id/more"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dip"
            android:background="@drawable/omp_video_details_share_image_selector"/>
        <ImageButton
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:id="@+id/like"
            android:layout_toLeftOf="@+id/share"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dip"
            android:background="@drawable/omp_btn_like_onepage_normal"/>
        <TextView
            android:id="@+id/top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/like"
            android:layout_toRightOf="@+id/image_button_back"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:singleLine="true"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview_content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/relative_layout_top_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_group_scroll_view_content_container">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/view_group_video_info"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_view_game"/>
                <RelativeLayout
                    android:id="@+id/video_btn_view_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        style="@style/omp_button_background_omlet_blue_rounded_corner"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/omp_video_details_download"
                        android:id="@+id/text_view_download_button"
                        android:visibility="gone"/>
                    <TextView
                        style="@style/omp_button_background_cancel_follow"
                        android:id="@+id/text_view_followed_button"
                        android:visibility="gone"></TextView>
                    <LinearLayout
                        style="@style/omp_button_background_add_follow"
                        android:id="@+id/view_group_add_follow"
                        android:visibility="gone">
                        <ImageView
                            style="@style/omp_image_add_follow"/>
                        <TextView
                            style="@style/omp_text_add_follow"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toRightOf="@id/image_view_game"
                    android:layout_toLeftOf="@id/video_btn_view_group"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_game_name"
                        android:text="@string/omp_stub_user_id_or_game_name"
                        android:textColor="@color/omp_gray_text_4a4a4a"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="2dp"
                            android:id="@+id/text_view_user_id"
                            android:textColor="@color/omp_gray_text_4a4a4a"
                            android:textSize="11sp"
                            android:text="@string/omp_stub_user_id"
                            android:singleLine="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_view_post_time"
                            android:textColor="@color/omp_gray_text_4a4a4a"
                            android:textSize="9sp"
                            android:text="@string/omp_stub_time_label"
                            android:layout_toRightOf="@id/text_view_user_id"
                            android:singleLine="true"
                            android:ellipsize="none"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_view_video_place_holder"
                android:layout_width="match_parent"
                android:layout_height="250dip"
                android:layout_below="@id/view_group_video_info"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:src="@drawable/omp_ic_loadingblankpage"
                android:background="@color/omp_gray_background_bcbcbc"
                android:scaleType="center"/>

            <mobisocial.omlet.overlaybar.ui.view.video.VideoViewGroup
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/video_view_group"
                android:layout_below="@id/view_group_video_info"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/omp_shape_view_border_light_gray"
                android:layout_below="@id/video_view_group"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_group_video_post_info">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/text_view_video_title"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_video_description"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_below="@id/text_view_video_title"
                    android:textSize="11sp"
                    android:textColor="@color/omp_gray_text_4a4a4a"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_group_tag_container"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="8dp"
                    android:layout_below="@id/text_view_video_description">
                    <mobisocial.omlet.overlaybar.util.FlowLayout
                        android:id="@+id/tag_flowlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="18dp"
                        app:omp_verticalSpacing="8dp">
                    </mobisocial.omlet.overlaybar.util.FlowLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view_separator"
                    android:layout_below="@id/view_group_tag_container"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/omp_gray_line_eaeaea"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_group_likes_and_views"
                    android:layout_below="@id/view_separator"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_like_count"
                        android:text="@string/omp_stub_like_count"
                        android:textSize="9sp"
                        android:textColor="@color/omp_gray_text_585857"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/omp_Likes"
                        android:textSize="9sp"
                        android:textColor="@color/omp_gray_text_585857"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:background="@color/omp_gray_line_b6b6b6"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/view_separator_likes_views"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_view_count"
                        android:text="@string/omp_stub_view_count"
                        android:textSize="9sp"
                        android:textColor="@color/omp_gray_text_585857"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/omp_Views"
                        android:textSize="9sp"
                        android:textColor="@color/omp_gray_text_585857"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/scrolldownhint"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/omp_btn_scrolldownhint_onepage"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dp"/>
    <View
        android:id="@+id/more_background"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/relative_layout_top_bar"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/view_group_more_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true">
    </RelativeLayout>
</RelativeLayout>

