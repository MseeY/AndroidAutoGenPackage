<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/more_owner_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/omp_more_menu_background">
        <LinearLayout
            android:id="@+id/view_group_delete_post"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/omp_ic_delete_mypostpopup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.2dp"
                android:layout_marginRight="6dp"
                android:text="@string/omp_delete"
                android:textSize="12sp"
                android:textColor="@color/omp_gray_text_70706f"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/omp_gray_line_d8d8d8"></View>
        <LinearLayout
            android:id="@+id/view_group_save_post"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/omp_ic_download_mypostpopup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.2dp"
                android:layout_marginRight="6dp"
                android:text="@string/omp_save_to_device"
                android:textSize="12sp"
                android:textColor="@color/omp_gray_text_70706f"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
