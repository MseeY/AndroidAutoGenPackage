<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/omp_gray_line_eaeaea"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/omp_gray_white_gradient"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/user_profile_upload"
            android:layout_width="142dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/upload_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_zero"
                    android:textColor="@color/omp_omlet_blue"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/upload_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/omp_upload"
                    android:textColor="@color/omp_omlet_blue"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:id="@+id/upload_line"
                android:layout_width="142dp"
                android:layout_height="3dp"
                android:background="@color/omp_omlet_blue"
                android:visibility="visible"></View>
        </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="22dip"
            android:layout_marginBottom="9dp"
            android:background="@color/omp_gray_line_eaeaea">
        </View>
        <LinearLayout
            android:id="@+id/user_profile_fans"
            android:layout_width="142dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_zero"
                    android:textColor="@color/omp_gray_text_70706f"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/fans_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/omp_profile_tab_followers"
                    android:textColor="@color/omp_gray_text_70706f"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:id="@+id/fans_line"
                android:layout_width="142dp"
                android:layout_height="3dp"
                android:background="@color/omp_omlet_blue"
                android:visibility="invisible"></View>
        </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="22dip"
            android:layout_marginBottom="9dp"
            android:background="@color/omp_gray_line_eaeaea">
        </View>
        <LinearLayout
            android:id="@+id/user_profile_follow"
            android:layout_width="142dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/follow_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_zero"
                    android:textColor="@color/omp_gray_text_70706f"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/follow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/omp_profile_tab_following"
                    android:textColor="@color/omp_gray_text_70706f"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:id="@+id/follow_line"
                android:layout_width="142dp"
                android:layout_height="3dp"
                android:background="@color/omp_omlet_blue"
                android:visibility="invisible"></View>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dip"
        android:background="@color/omp_gray_line_eaeaea"></View>
</LinearLayout>
