<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/upload_button_related_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/view_group_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <CheckBox
                android:id="@+id/checkbox_agree"
                style="@android:style/Widget.CompoundButton.CheckBox"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/omp_gray_text_afafaf"
                android:textSize="12sp"
                android:text="@string/omp_upload_agree_register"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_group_video_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/omp_shape_video_upload_background_selector">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/omp_btn_upload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="@string/omp_upload_video_upload_button_text"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/omp_ic_omlet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/omp_gray_text_afafaf"
            android:textSize="12sp"
            android:text="@string/omp_powered_by_omlet"/>
    </LinearLayout>
</RelativeLayout>
