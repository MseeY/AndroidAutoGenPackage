<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/view_group_profile_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:id="@+id/user_profile_image"/>
                <RelativeLayout
                    android:id="@+id/cam_view_group"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignRight="@+id/user_profile_image"
                    android:layout_alignBottom="@+id/user_profile_image">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/omp_btn_cam_profile"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/user_profile_name"
                        android:textColor="@color/omp_gray_text_4a4a4a"
                        android:textColorHint="@color/omp_gray_text_cbcbcb"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:background="@null"
                        android:hint="@string/omp_profileFragment_hint_profile_name"/>
                    <ImageButton
                        android:id="@+id/user_profile_name_edit_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4.5dp"
                        android:src="@drawable/omp_btn_editname_myprofile"
                        android:background="@null"/>
                    <LinearLayout
                        android:id="@+id/view_group_tutorial_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/omp_tutorialbubble_triangle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="31dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="11dp"
                            android:text="@string/omp_tutorial_click_here_to_change_name"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:background="@drawable/omp_tutorial_text_background"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/omlet_id_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/id_text"
                        android:textColor="@color/omp_gray_background_9b9b9b"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_id"/>
                    <TextView
                        android:id="@+id/user_omlet_id"
                        android:textColor="@color/omp_gray_background_9b9b9b"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_group_tutorial_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="86dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/omp_tutorialbubble_triangle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:text="@string/omp_tutorial_click_here_to_change_picture"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/omp_tutorial_text_background"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_group_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>
