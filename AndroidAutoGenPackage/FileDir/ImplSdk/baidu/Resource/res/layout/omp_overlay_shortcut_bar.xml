<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/shortcut_bar"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/shortcut_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/shortcut_record_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/omp_btn_switch_record_normal">
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shortcut_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/shortcut_camera_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/omp_btn_switch_screenshot_normal">
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shortcut_trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/shortcut_trash_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/omp_btn_switch_close_normal">
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:textSize="10sp"
            android:text="@string/omp_tool_selection_instruction"/>
    </LinearLayout>
</LinearLayout>
