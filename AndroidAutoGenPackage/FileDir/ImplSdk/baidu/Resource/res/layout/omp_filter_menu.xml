<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="6dp"
        android:src="@drawable/omp_bg_filterpopup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/omp_filter_list_background">
        <ListView
            android:id="@+id/filter_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"></ListView>
        <TextView
            android:id="@+id/filter_clean_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/omp_clear_tag"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/omp_filter_clear_background"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
