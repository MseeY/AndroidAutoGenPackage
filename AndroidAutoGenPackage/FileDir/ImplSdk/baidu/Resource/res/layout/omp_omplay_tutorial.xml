<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"/>
    <LinearLayout
        android:id="@+id/shortcut_bar"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/shortcut_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/shortcut_record_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/omp_btn_switch_record_normal">
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="@string/omp_tutorial_record_button"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shortcut_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/shortcut_camera_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/omp_btn_switch_screenshot_normal">
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="@string/omp_tutorial_screenshot_button"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shortcut_trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/shortcut_trash_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/omp_btn_switch_close_normal">
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="@string/omp_tutorial_dismiss_button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tutorial_hint_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tutorial_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="@string/omp_tutorial_overlay_bar_selection_instruction1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"/>
        <CheckBox
            android:layout_marginTop="12dp"
            android:id="@+id/tutorial_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:checked="true"
            android:text="@string/omp_tutorial_disable_tutorial"/>
        <TextView
            android:id="@+id/tutorial_ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/omp_tutorial_button_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:text="@string/omp_tutorial_overlay_bar_ok"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:id="@+id/view_group_omplay_button">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view_place_holder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                />
            <ImageView
                android:id="@+id/image_view_omplay_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/omp_btn_tool_record"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/text_view_omplay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:textColor="@color/omp_gray_text_4a4a4a"
                android:text="@string/omp_button_record_video"
                android:visibility="gone"
                />
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/tutorial_point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/omp_ic_tutorial_point"/>
        <FrameLayout
            android:layout_width="68dp"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="13dp">
            <ImageView
                android:id="@+id/tutorial_finger"
                android:layout_marginTop="10dp"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/omp_ic_tutorial_finger_only"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/omp_ic_omlet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/omp_gray_text_afafaf"
            android:textSize="12sp"
            android:text="@string/omp_powered_by_omlet"/>
    </LinearLayout>
</RelativeLayout>
