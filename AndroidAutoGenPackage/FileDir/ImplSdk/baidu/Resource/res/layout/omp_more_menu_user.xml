<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/omp_more_menu_background">
        <LinearLayout
            android:id="@+id/view_group_report_post"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/omp_ic_report_strangerpostpopup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.2dp"
                android:layout_marginRight="6dp"
                android:text="@string/omp_report"
                android:textSize="12sp"
                android:textColor="@color/omp_gray_text_70706f"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
