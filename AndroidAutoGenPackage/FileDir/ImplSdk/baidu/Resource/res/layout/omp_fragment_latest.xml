<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            style="@style/omp_main_overlay_top_bar_container">
            <ImageButton
                android:id="@+id/image_button_back"
                style="@style/omp_video_overlay_back_button"
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/image_button_next"
                style="@style/omp_video_overlay_next_button"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/text_page_number"
                style="@style/omp_video_overlay_page_number" />
            <ImageButton
                android:layout_width="32dip"
                android:layout_height="26dip"
                android:id="@+id/filter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="39dip"
                android:background="@drawable/omp_latest_filter_image_selector"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/filter"
                android:layout_marginLeft="71dip"
                android:textColor="@android:color/white"
                android:text="@string/omp_legend_of_the_turret"
                android:textSize="18sp"
                android:gravity="center"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_container"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/filter_menu"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp">
    </RelativeLayout>
</RelativeLayout>
