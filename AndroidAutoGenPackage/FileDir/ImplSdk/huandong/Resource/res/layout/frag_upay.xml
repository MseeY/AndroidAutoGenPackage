<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="15dp"
        android:text="请输入充值金额(元)"
        android:textColor="#000000"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
         android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/et_putMoney"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#dddddd"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:hint="请输入金额" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="充值比例:1人民币=1N币"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_Nb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:text="可兑换N币 0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
         android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        
        
        <LinearLayout
            android:id="@+id/ll_unionpay"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_unionpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alipay_icon_selected"
                android:clickable="false" />
        </LinearLayout>

          <LinearLayout
            android:id="@+id/ll_alipay"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unionpay_icon_selected"
                android:clickable="false" />
        </LinearLayout>
          <LinearLayout
            android:id="@+id/ll_nowpay"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_nowpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/now_icon_selected"
                android:clickable="false" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/bt_to_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_blue_bt"
        android:singleLine="true"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>